	</s:user>

	<s:user name="mira">
		<c:firstname>Miroslav</c:firstname>
		<c:lastname>Falco</c:lastname>
		<c:email>mf@taco-beru.name</c:email>
		<s:ssh type="ssh-dsa">  AAAAB3NzaC1kc3MAAACBAIXclzahWltq96N5cz3Rf---6yXMPCoEtM6WGJWo5vxA==</s:ssh>
	</s:user>

	<s:user name="fean">
